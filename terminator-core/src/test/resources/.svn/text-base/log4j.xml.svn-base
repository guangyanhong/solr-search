<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
     
     <appender name="INDEX_DUMP" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="E:\\taobao_workspace\\solr_server\\logs\\server.log" />
		<param name="Append" value="false" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [%c] - %m%n" />
		</layout>
	</appender>
	
	<logger name="org.apache.solr">
		<level value="DEBUG" />
		<appender-ref ref="INDEX_DUMP" />
	</logger>
	
	<logger name="org.springframework">
		<level value="WARN" />
		<appender-ref ref="INDEX_DUMP" />
	</logger>
	
	<logger name="org.quartz">
		<level value="DEBUG" />
		<appender-ref ref="INDEX_DUMP" />
	</logger>
	
	<logger name="com.taobao.terminator">
		<level value="DEBUG" />
		<appender-ref ref="INDEX_DUMP" />
	</logger>
</log4j:configuration>
