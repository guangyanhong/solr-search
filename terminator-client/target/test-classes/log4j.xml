<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
     
    <appender name="INDEX_DUMP" class="org.apache.log4j.ConsoleAppender">
		<param name="Append" value="false" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [%c] - %m%n" />
		</layout>
	</appender>
	
	<appender name="allFile" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="D:\\project-all.log" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [%c] - %m%n" />
		</layout>
	</appender>
	
	<logger name="com.taobao.terminator.client">
		<level value="DEBUG" />
		<appender-ref ref="INDEX_DUMP" />
		<appender-ref ref="allFile" />
	</logger>
	
	<logger name="com.taobao.terminator.client.test">
		<level value="DEBUG" />
		<appender-ref ref="INDEX_DUMP" />
	</logger>

</log4j:configuration>
