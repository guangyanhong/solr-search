<?xml version="1.0" ?>

<schema name="example core" version="1.1">
	<types>
		<fieldtype name="string_pd" class="solr.TextField" sortMissingLast="true" omitNorms="true">
			<analyzer class="net.paoding.analysis.analyzer.PaodingAnalyzer"></analyzer>
		</fieldtype>
		<fieldtype name="string" class="solr.TextField" sortMissingLast="true" />
		<fieldtype name="long"   class="solr.LongField" omitNorms="true"/>
		<fieldType name="int"    class="solr.IntField" />
		<fieldType name="tlong"  class="solr.TrieLongField" precisionStep="8" omitNorms="true" positionIncrementGap="0"/>
	</types>

	<fields>
		<field name="id"         type="long"       indexed="true"  stored="true" multiValued="false" required="true"/>
		<field name="subjectId"  type="long"       indexed="true"  stored="true" multiValued="false"/>
		<field name="ownerId"    type="long"       indexed="true"  stored="true" multiValued="false"/>
		<field name="ownerNick"  type="string"     indexed="false" stored="true" multiValued="false"/>
		<field name="content"    type="string_pd"  indexed="true"  stored="true" multiValued="false"/>
		<field name="gmtCreate"  type="tlong"      indexed="true"  stored="true" multiValued="false"/>
		<field name="fromType"   type="int"        indexed="true"  stored="true" multiValued="false"/>
	</fields>

  <uniqueKey>id</uniqueKey>
  <defaultSearchField>content</defaultSearchField>
  <solrQueryParser defaultOperator="OR"/>
</schema>