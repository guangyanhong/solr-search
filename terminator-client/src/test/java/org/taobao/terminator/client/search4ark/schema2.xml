<?xml version="1.0" ?>
<schema name="search4arkisv-schema" version="1.1">
  <types>
        <fieldtype name="string"    class="solr.TextField"    sortMissingLast="true" omitNorms="true" />
        <fieldType name="long"      class="solr.LongField"     omitNorms="true"/>
        <fieldType name="slong"     class="solr.SortableLongField" sortMissingLast="true" omitNorms="true"/>

        <fieldtype name="str_word" class="solr.TextField" sortMissingLast="true" omitNorms="false">
                <analyzer class="org.apache.lucene.analysis.cn.ChineseAnalyzer"></analyzer>
        </fieldtype>
         <fieldtype name="str_ws" class="solr.TextField" positionIncrementGap="100">
            <analyzer>
                <tokenizer class="solr.WhitespaceTokenizerFactory"/>
            </analyzer>
        </fieldtype>
  </types>

  <fields>
    <field name="id"                     type="long"     indexed="true"   stored="true"  multiValued="false" required="true"/>
    <field name="isv_id"                 type="long"     indexed="true"   stored="true"  multiValued="false"/>
    <field name="se_user_tag"            type="long"     indexed="true"  stored="true"  multiValued="false"/>
    <field name="sp_name"                type="str_word" indexed="true"  stored="true"  multiValued="false"/>
    <field name="sp_logo_url"            type="string"   indexed="true"  stored="true"  multiValued="false"/>
    <field name="seller_service_count"   type="long"     indexed="true"   stored="true"  multiValued="false"/>
    <field name="province"               type="string"   indexed="true"  stored="true"  multiValued="false"/>
    <field name="city"                   type="string"   indexed="true"   stored="true"  multiValued="false"/>
    <field name="seller_main_categories" type="str_ws"   indexed="true"   stored="true"  multiValued="false"/>
    <field name="service_wangwang"       type="string"   indexed="true"   stored="true"  multiValued="false"/>
    <field name="gmt_create"             type="slong"    indexed="true"   stored="true"  multiValued="false"/>
    <field name="is_delete"              type="long"     indexed="true"   stored="true"  multiValued="false"/>
    <field name="nick"                   type="string"   indexed="true"   stored="true"  multiValued="false"/>
  </fields>

  <uniqueKey>id</uniqueKey>
  <defaultSearchField>id</defaultSearchField>
  <solrQueryParser defaultOperator="OR"/>
</schema>