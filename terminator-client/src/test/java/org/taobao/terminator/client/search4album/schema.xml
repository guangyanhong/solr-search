<?xml version="1.0" ?>

<schema name="example core" version="1.1">
  <types>
    <fieldtype name="string" class="solr.TextField" sortMissingLast="true" omitNorms="true" />
        <fieldType name="tint"  class="solr.TrieIntField"  precisionStep="8" omitNorms="true" positionIncrementGap="0"/>

        <fieldtype name="string_pd" class="solr.TextField" sortMissingLast="true" omitNorms="true">
                <analyzer class="net.paoding.analysis.analyzer.PaodingAnalyzer"></analyzer>
        </fieldtype>

        <fieldType  name="int"   class="solr.IntField"  omitNorms="true"/>
        <fieldType  name="long"  class="solr.LongField" omitNorms="true"/>
        <fieldType  name="slong" class="solr.SortableLongField" sortMissingLast="true" omitNorms="true"/>
  </types>

  <fields>
    <field name="id"           type="slong"     indexed="true"  stored="true"  multiValued="false" required="true"/>
    <field name="status"       type="int"       indexed="true"  stored="false" multiValued="false"/>
    <field name="inform_num"   type="int"       indexed="true"  stored="false" multiValued="false"/>
    <field name="opt_nick"     type="string"    indexed="true"  stored="false" multiValued="false"/>
    <field name="user_nick"    type="string"    indexed="true"  stored="false" multiValued="false"/>
    <field name="user_id"      type="long"      indexed="false" stored="true"  multiValued="false"/>
    <field name="file_path"    type="string"    indexed="true"  stored="false" multiValued="false"/>
    <field name="tags"         type="string_pd" indexed="true"  stored="false" multiValued="false"/>
    <field name="memo"         type="string_pd" indexed="true"  stored="false" multiValued="false"/>
    <field name="gmt_created"  type="tint"      indexed="true"  stored="false" multiValued="false"/>
    <field name="gmt_modified" type="tint"      indexed="true"  stored="false" multiValued="false"/>
    <field name="via_type"     type="int"       indexed="true"  stored="false" multiValued="false"/>
    <field name="album_id"     type="long"      indexed="true"  stored="false" multiValued="false"/>
    <field name="opt_id"       type="long"      indexed="true"  stored="false" multiValued="false"/>

  </fields>

  <uniqueKey>id</uniqueKey>
  <defaultSearchField>id</defaultSearchField>
  <solrQueryParser defaultOperator="OR"/>
</schema>