<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="allFile" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${terminator.log.dir}/project-all.log" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [%c] - %m%n" />
		</layout>
	</appender>

	<appender name="core" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${terminator.log.dir}/core.log" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [%c] - %m%n" />
		</layout>
	</appender>

	<appender name="zookeeper" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${terminator.log.dir}/zookeeper.log" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [%c] - %m%n" />
		</layout>
	</appender>
	
	<appender name="hsfcontainer" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${terminator.log.dir}/hsfcontainer.log" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [%c] - %m%n" />
		</layout>
	</appender>

	<appender name="service" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${terminator.log.dir}/service.log" />
		<param name="Append" value="false" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [%c] - %m%n" />
		</layout>
	</appender>

	<appender name="index" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${terminator.log.dir}/index.log" />
		<param name="append" value="true" />
		<param name="encoding" value="GB2312" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d]  %m%n" />
		</layout>
	</appender>

	<appender name="hsf" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${terminator.log.dir}/hsf.log" />
		<param name="Append" value="false" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [%c] - %m%n" />
		</layout>
	</appender>


	<logger name="com.taobao.hsf">
		<level value="DEBUG" />
		<appender-ref ref="hsf" />
	</logger>
	
	<logger name="com.taobao.terminator.core.watchers">
		<level value="WARN" />
		<appender-ref ref="zookeeper" />
	</logger>
	
	<logger name="com.taobao.terminator.common.zk">
		<level value="WARN" />
		<appender-ref ref="zookeeper" />
	</logger>
	<logger name="com.taobao.terminator.common.TerminatorHSFContainer">
		<level value="WARN" />
		<appender-ref ref="hsfcontainer" />
	</logger>
	
	<logger name="com.taobao.terminator.core">
		<level value="WARN" />
		<appender-ref ref="core" />
	</logger>
	
	<logger name="com.taobao.terminator.core.index">
		<level value="WARN" />
		<appender-ref ref="index" />
	</logger>
	
	<logger name="com.taobao.terminator.core.service">
		<level value="WARN" />
		<appender-ref ref="service" />
	</logger>

	<root>
		<level value="INFO" />
		<appender-ref ref="allFile" />
	</root>

</log4j:configuration>
